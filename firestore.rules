rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Trip entries - authenticated users can read/write
    match /tripEntries/{tripId} {
      allow read, write: if request.auth != null;
    }
    
    // Vehicles summary - authenticated users can read/write
    match /vehicles/{vehicleId} {
      allow read, write: if request.auth != null;
    }
    
    // Parties summary - authenticated users can read/write
    match /parties/{partyId} {
      allow read, write: if request.auth != null;
    }
  }
}